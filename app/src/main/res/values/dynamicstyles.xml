<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DynamicTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:colorBackgroundFloating">?android:colorBackground</item>
        <item name="alertDialogTheme">@style/AlertDialogDynamic</item>
        <item name="colorPrimary">@android:color/system_accent1_500</item>
    </style>
    <style name="PauseDialogDynamic" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
        <item name="android:colorBackground">@android:color/system_neutral1_10</item>
        <item name="android:colorBackgroundFloating">?android:colorBackground</item>
    </style>
    <style name="LoginDialogDynamic" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>
    <style name="AlertDialogDynamic" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@android:color/system_neutral1_10</item>
        <item name="colorPrimary">@android:color/system_accent1_700</item>
    </style>
</resources>