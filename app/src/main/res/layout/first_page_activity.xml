<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        tools:ignore="MissingConstraints">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            />
    </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:clipChildren="false"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@+id/appbar"
            app:layout_constraintBottom_toTopOf="@id/customised_add_iv"
            android:id="@+id/front_page_actions_view_holder"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/upload_button"
                    android:onClick="gotoserverpage"
                    app:cardCornerRadius="@dimen/card_corner_radius_main_page"
                    app:cardBackgroundColor="#22888888"
                    app:cardElevation="0dp"
                    android:layout_margin="@dimen/margin_cards"
                    android:layout_width="130dp"
                    android:layout_height="150dp">

                    <LinearLayout
                        android:elevation="1000dp"
                        android:padding="15dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_upload"
                            android:scaleType="fitXY"
                            />

                        <TextView
                            android:paddingTop="10dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:text="@string/send"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/download_button"
                    android:onClick="gotoclientpage"
                    app:cardCornerRadius="@dimen/card_corner_radius_main_page"
                    app:cardBackgroundColor="#22888888"
                    app:cardElevation="0dp"
                    android:layout_margin="@dimen/margin_cards"
                    android:layout_width="130dp"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:padding="15dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_download"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:paddingTop="10dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:text="@string/receive"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <LinearLayout
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/view_files_button"
                    android:onClick="gotoviewfilespage"
                    app:cardCornerRadius="@dimen/card_corner_radius_main_page"
                    app:cardBackgroundColor="#22888888"
                    app:cardElevation="0dp"
                    android:layout_margin="@dimen/margin_cards"
                    android:layout_width="130dp"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:padding="15dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_files"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:paddingTop="10dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:text="@string/history"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/pc_share_button"
                    android:onClick="gotopcsharepage"
                    app:cardCornerRadius="@dimen/card_corner_radius_main_page"
                    app:cardBackgroundColor="#22888888"
                    app:cardElevation="0dp"
                    android:layout_margin="@dimen/margin_cards"
                    android:layout_width="130dp"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:padding="15dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pc_share"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:paddingTop="10dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:text="@string/share_pc"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>
    <ImageView
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/customised_add_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>